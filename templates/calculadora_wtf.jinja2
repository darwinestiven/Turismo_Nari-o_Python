{% extends "base.html" %}

{% block title %}Calculadora WTF{% endblock %}

{% block content %}
	    <h2>Calculadora con WTF</h2>
	    {% for field, errors in form.errors.items() %}
			<div class="alert alert-danger">
    		{{ form[field].label }}:{{ ', '.join(errors) }}
			</div>
		{% endfor %}
	    <form action={{url_for("calculadora_wtf")}} method="POST" novalidate>			
			{{ form.csrf_token }}
			{{form.num1.label() }}{{form.num1() }}<br/>
			{{form.num2.label() }}{{form.num2() }}<br/>
			{{form.operador.label() }}{{form.operador()}}<br/>

			<!-- {% for field in form %}
				{% if field.type|string() not in ['SubmitField', 'CSRFTokenField'] %}			    
					{{field.label()}} {{field()}} <br/>
				{% endif %}
			{% endfor %} -->
			<br/>
			{{form.submit()}}
		</form>
{% endblock %}
